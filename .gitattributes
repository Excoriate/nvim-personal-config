# Set default line ending behavior
* text=auto eol=lf

# Lua files
*.lua text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files (explicitly)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.exe binary
*.pyc binary
*.so binary
*.dll binary
*.dylib binary

# Archive files
*.tar binary
*.tar.gz binary
*.tar.bz2 binary
*.rar binary